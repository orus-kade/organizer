<?xml version="1.0" encoding="UTF-8"?>
<actions>
        <action>
            <actionName>run</actionName>
            <packagings>
                <packaging>jar</packaging>
            </packagings>
            <goals>
                <goal>process-classes</goal>
                <goal>org.codehaus.mojo:exec-maven-plugin:1.2.1:exec</goal>
            </goals>
            <properties>
                <exec.args>-Dorganizer.file.path=./src/main/resources -classpath %classpath ru.sfedu.organizer.Main -src xml</exec.args>
                <exec.workingdir></exec.workingdir>
                <exec.executable>java</exec.executable>
            </properties>
        </action>
        <action>
            <actionName>debug</actionName>
            <packagings>
                <packaging>jar</packaging>
            </packagings>
            <goals>
                <goal>process-classes</goal>
                <goal>org.codehaus.mojo:exec-maven-plugin:1.2.1:exec</goal>
            </goals>
            <properties>
                <exec.args>-Xdebug -Xrunjdwp:transport=dt_socket,server=n,address=${jpda.address} -Dorganizer.file.path=./src/main/resources -classpath %classpath ru.sfedu.organizer.Main -src xml</exec.args>
                <jpda.listen>true</jpda.listen>
                <exec.workingdir></exec.workingdir>
                <exec.executable>java</exec.executable>
            </properties>
        </action>
        <action>
            <actionName>profile</actionName>
            <packagings>
                <packaging>jar</packaging>
            </packagings>
            <goals>
                <goal>process-classes</goal>
                <goal>org.codehaus.mojo:exec-maven-plugin:1.2.1:exec</goal>
            </goals>
            <properties>
                <exec.args>-Dorganizer.file.path=./src/main/resources -classpath %classpath ru.sfedu.organizer.Main -src xml</exec.args>
                <exec.workingdir></exec.workingdir>
                <exec.executable>java</exec.executable>
            </properties>
        </action>
    </actions>
